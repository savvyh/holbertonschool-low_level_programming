#include "main.h"
/**
 * print_sign - pritn the sign of a number
 * @n: number
 * Return: 1 if +, 0 if 0 and - if less than zero
 */
int print_sign(int n)
{
if (n > 0)
	{
	  _putchar('+');
	  return (1);
	}
if (n == 0)
    {
      _putchar('0');
      return (0);
    }
if (n < 0)
    {
      _putchar('-');
      return (-1);
    }
}
	 
